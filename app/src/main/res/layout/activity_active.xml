<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cascadia.hidenseek.Active"

    tools:ignore="MergeRootFrame" >

    <ImageView
        android:contentDescription="@string/descr"
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/bg" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:id="@+id/Clock_Area">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="ROLE"
                android:textSize="40dp"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/textrole"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="00:00:00"
                android:textSize="40dp"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/timer"
                android:layout_weight="1"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/Clock_Area"
            android:id="@+id/Context_Player_UI">
        </FrameLayout>

        <ImageButton
            android:contentDescription="@string/descr"
            android:id="@+id/btnLeaveGame"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/btn_leave_set" />

    </RelativeLayout>

</FrameLayout>